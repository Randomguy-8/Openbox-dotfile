<?xml version="1.0" encoding="UTF-8"?>
<openbox_menu>
    <menu id="root-menu" label="OpenBox 3">

        <separator/>
        
        <item label="Terminal"> <action name="Execute">
            <execute>xfce4-terminal</execute>
        </action> </item>
        <item label="File Manager"> <action name="Execute">
            <execute>thunar</execute>
        </action> </item>
        <item label="Web Browser"> <action name="Execute">
            <execute>brave</execute>
        </action> </item>
        <item label="Text Editor"> <action name="Execute">
            <execute>/opt/sublime_text/sublime_text</execute>
        </action> </item>
            
        <separator/>

    <menu id="1" label="Applications">    
        <menu id="2" label="Editors">    
            <item label="Nano"> <action name="Execute">
                <execute>xfce4-terminal -e nano</execute>
            </action> </item>
            <item label="Vim"> <action name="Execute">
                <execute>xfce4-terminal -e vim</execute>
            </action> </item>
        </menu>
        <menu id="3" label="Graphics">
            <item label="GIMP"> <action name="Execute">
                <execute>gimp</execute>
            </action> </item>
        </menu>
        <menu id="4" label="Media">
            <item label="VLC"> <action name="Execute">
                <execute>vlc</execute>
            </action> </item>
        </menu> 
        <menu id="5" label="Settings">
            <item label="Preferred Applications"> <action name="Execute">
                <execute>libfm-pref-apps</execute>
            </action> </item>
            <item label="File Manager Settings"> <action name="Execute">
                <execute>thunar-settings</execute>
            </action> </item>
            <item label="Xfce Terminal Settings"> <action name="Execute">
                <execute>xfce4-terminal --preferences</execute>
            </action> </item>  
        </menu>
    </menu>
    <menu id="9" label="Preferences">
        <item label="Appearance"> <action name="Execute">
            <execute>lxappearance</execute>
        </action> </item>
         <item label="Change Wallpaper"> <action name="Execute">
                <execute>nitrogen</execute>
        </action> </item>
        <item label="Openbox Manager"> <action name="Execute">
            <execute>obconf</execute>
        </action> </item>
        <item label="Reconfigure Openbox"> <action name="Reconfigure"/> </item>
    </menu>
    
    <separator/>

    <menu id="6" label="Commands">
        <item label="Neofetch"> <action name="Execute">
            <execute>xfce4-terminal -H -e neofetch</execute>
