        <item label="Github"> <action name="Execute">
            <execute>brave https://github.com/Randomguy-8</execute>
        </action> </item>
        <item label="Google"> <action name="Execute">
            <execute>brave https://google.com</execute>
        </action> </item>
        <item label="Youtube"> <action name="Execute">
            <execute>brave https://youtube.com/</execute>
        </action> </item>
        <item label="Whatsapp"> <action name="Execute">
