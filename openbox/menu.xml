        <item label="Trash"> <action name="Execute">
            <execute>thunar trash:///</execute>
        </action> </item>
        <item label="Backup (Drive 6)"> <action name="Execute">
            <execute>thunar /media/</execute>
        </action> </item> 
        <item label="Documents"> <action name="Execute">
            <execute>thunar /home/randomguy/Documents/</execute>
        </action> </item>
