        <item label="ALSA mixer"> <action name="Execute">
            <execute>xfce4-terminal -e alsamixer</execute>
        </action> </item>
        <item label="Beats"> <action name="Execute">
                <execute>xfce4-terminal -e ./Projects/Beats/beats</execute>
        </action> </item>
        <item label="Taskmanager"> <action name="Execute">
            <execute>xfce4-terminal -e top</execute>
        </action> </item>
        <item label="Python"> <action name="Execute">
            <execute>xfce4-terminal -e python</execute>
        </action> </item>
        <item label="Calculator"> <action name="Execute">
            <execute>xfce4-terminal -e calc</execute>
        </action> </item>
    </menu>
    <menu id="8" label="places">
        <item label="Home"> <action name="Execute">
            <execute>thunar /home/randomguy/</execute>
